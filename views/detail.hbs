<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container mb-5">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{#if restaurant.google_map}}{{restaurant.google_map}}{{else}}https://www.google.com/maps/search/{{restaurant.location}}{{/if}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      {{#if restaurant.description}}
        <p class="mt-3 mb-5">
          {{restaurant.description}}
        </p>
      {{else}}
        <p class="mt-3 mb-5" style="font-style: italic; color: #CCCCCC;">
          (暫無說明)
        </p>
      {{/if}}

      <img class="rounded mx-auto d-block mb-4 w-100"
        src="{{#if restaurant.image}}{{restaurant.image}}{{else}}/image/no-img.jpg{{/if}}" onerror="this.src='/image/not-available.png';" alt="{{restaurant.name}}"
        style="max-width: 600px;">
      
      <div class="fn-bar my-5">
        <a href="/restaurant/{{restaurant.id}}/edit">
          <button type="button" class="btn btn-success">
            <i class="fa-solid fa-pen-to-square" style="margin-right: 10px;"></i>
            編輯
          </button>
        </a>
        <form id="delete-restaurant" method="post" class="ms-3">
          <button type="button" onclick="confirmDelete({{restaurant.id}})" class="btn btn-danger">
            <i class="fa-solid fa-trash-can" style="margin-right: 10px;"></i>
            刪除
          </button>
        </form>
        <a href="/restaurants">
          <button type="button" class="btn btn-secondary ms-3">
            <i class="fa-solid fa-house" style="margin-right: 10px;"></i>
            返回首頁
          </button>
        </a>
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/confirm-delete.js"></script>