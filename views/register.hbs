<div class="container">
  <div class="card my-5">
    <form action="/users" method="post" id="register-form" class="needs-validation" novalidate>
      <div class="card-header" style="font-weight: bold;">
        註冊帳號
      </div>

      <div class="card-body">

        {{!-- E-mail --}}
        <div class="row mb-3">
          <label for="email" class="col-sm-4 col-form-label">E-mail（登入帳號）</label>
          <div class="col-sm-8">
            <input name="email" type="email" class="form-control" id="email" value="" required>
            <div class="invalid-feedback">* 請輸入有效電子信箱</div>
          </div>
        </div>

        {{!-- 使用者名稱 --}}
        <div class="row mb-3">
          <label for="name" class="col-sm-4 col-form-label">使用者名稱</label>
          <div class="col-sm-8">
            <input name="name" type="text" class="form-control" id="name" value="">
          </div>
        </div>

        {{!-- 密碼 --}}
        <div class="row mb-3">
          <label for="password" class="col-sm-4 col-form-label">密碼</label>
          <div class="col-sm-8">
            <input name="password" type="password" class="form-control" id="password" value="" required>
            <div class="invalid-feedback">* 請輸入密碼</div>
          </div>
        </div>

        {{!-- 確認密碼 --}}
        <div class="row mb-3">
          <label for="confirmPassword" class="col-sm-4 col-form-label">確認密碼</label>
          <div class="col-sm-8">
            <input name="confirmPassword" type="password" class="form-control" id="confirmPassword" value="" required>
            <div class="invalid-feedback">* 請再次確認密碼</div>
          </div>
        </div>

      </div> {{!-- card-body --}}

      <div class="card-footer text-muted d-flex justify-content-end">       
       <div style="text-align:center; line-height: 50px;">已有帳號？ <a href="/login">登入</a></div>

        <button type="submit" class="btn btn-success ms-4">
          <i class="fa-regular fa-id-card" style="margin-right: 10px;"></i></i>確認註冊
        </button>

        <button type="button" class="btn btn-primary ms-3" id="clear-btn">
          <i class="fa-brands fa-facebook" style="margin-right: 10px;"></i>以 Facebook 登入
        </button>

      </div>

    </form>
  </div>
</div>

<script src="/javascripts/form.js"></script>